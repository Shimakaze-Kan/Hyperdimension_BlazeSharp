@inject TasksHistoryDraft TasksHistoryDraft

<div class="col-12 col-md-3 col-xl-2 sidebar p-2">

    <a @onclick="OnHide" class="oi oi-chevron-right cursor-pointer md-2"></a>

    @if (TasksHistoryDraft.Drafts.Count() == 0)
    {
        <h4 class="text-center">No drafts</h4>
        <h5>This panel will show links to started tasks</h5>
    }
    else
    {
        <ol class="list-group list-group-numbered">
            @foreach (var draft in TasksHistoryDraft.Drafts)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <a href="@($"taskcontainer/{draft.Key}")" class="ms-2 me-auto">
                        @draft.Value.Title
                    </a>
                    <button type="button" class="btn btn-outline-danger btn-sm" @onclick="@(_ => RemoveDraft(draft.Key))">Remove</button>
                </li>
            }
        </ol>
    }
</div>

@code {

    [Parameter] public EventCallback OnHide { get; set; }

    public void RemoveDraft(Guid id)
    {
        TasksHistoryDraft.RemoveDraft(id);
    }

}
