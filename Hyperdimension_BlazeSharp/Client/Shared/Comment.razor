<div class="row">
    <div class="md-8 w-100">
        <div class="media @(IsSubcomment ? "subcomment" : "") mb-3">
            <div class="media-body u-shadow-v18 g-bg-secondary p-2 avatar">
                <div class="mb-1 row">
                    <img class="d-flex width-50px height-50px rounded avatar mr-1 ml-3" src="@AvatarUrl" alt="avatar">
                    <div class="col">
                        <h5 class="h5 g-color-gray-dark-v1 mb-0">@UserName</h5>
                        <span class="g-color-gray-dark-v4 g-font-size-12">@Date</span>
                    </div>
                </div>

                <p>
                    <MarkupPanel Text="@Text" />
                </p>

                <ul class="list-inline d-sm-flex my-0">
                    <li class="list-inline-item ml-auto">
                        <a class="btn-outline-orange" href="#!">
                            Reply
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string AvatarUrl { get; set; }

    [Parameter]
    public string UserName { get; set; }

    [Parameter]
    public string Date { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public Guid CommentId { get; set; }

    [Parameter]
    public bool IsSubcomment { get; set; }
}
