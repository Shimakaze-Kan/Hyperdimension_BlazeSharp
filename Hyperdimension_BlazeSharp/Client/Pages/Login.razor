@page "/login"
@using Hyperdimension_BlazeSharp.Client.ViewModels
@inject ILoginViewModel _loginViewModel
@inject NavigationManager NavigationManager

<h3>Login</h3>

<h4 class="text-danger">@ErrorMessage</h4>

<div class="col-6">
    <input type="text" @bind="_loginViewModel.Email" class="form-control" placeholder="email address">
</div>
<br />
<div class="col-6">
    <input type="password" @bind="_loginViewModel.Password" class="form-control" placeholder="password">
</div>
<br />
<div class="col-6">
    <button class="btn btn-outline-orange" @onclick="LoginUser">Login</button>
</div>

@code {
    public string ErrorMessage { get; set; }

    public async Task LoginUser()
    {
        var response = await _loginViewModel.LoginUser();

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/", true);
        }
        else
        {
            ErrorMessage = await response.Content.ReadAsStringAsync();
        }
    }
}
