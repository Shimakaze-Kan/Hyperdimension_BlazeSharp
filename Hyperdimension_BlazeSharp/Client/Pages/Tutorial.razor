@page "/tutorial"
@using Hyperdimension_BlazeSharp.Client.ViewModels
@inject ILearningPathViewModel _learningPathViewModel


<button @onclick="ChangeVisibleStateOfCreateCustomTaskDialog">Add</button>

@if (_learningPathViewModel.ModulesWithTasks is null)
{
    <h4>Loading...</h4>
}
else
{
    @foreach (var module in _learningPathViewModel.ModulesWithTasks)
    {
        <div class="list-group">
            <div class="list-group-item list-item-border-orange-bg">
                @module.Title
            </div>

            @foreach (var task in module.Tasks)
            {
                <a href="@("TaskContainer/" + task.Guid)" class="list-group-item list-group-item-action">@task.Title</a>
            }

        </div>
    }
}

@if (isShowingCreateCustomTaskDialog)
{
    <UploadCustomTaskDialog Mode="0" />
}

@code {
    private bool isShowingCreateCustomTaskDialog = false;

    protected override async Task OnInitializedAsync()
    {
        _learningPathViewModel.ModeNumber = 0;
        await _learningPathViewModel.GetModulesWithTasks();
    }

    private void ChangeVisibleStateOfCreateCustomTaskDialog()
    {
        isShowingCreateCustomTaskDialog = !isShowingCreateCustomTaskDialog;
    }
}
